{
  "name": "cooldevguys/phpstan-dhexpendency-rules",
  "description": "A set of rules for PHPStan based on the Hexagonal architecture layers dependency",
  "type": "phpstan-extension",
  "license": "MIT",
  "keywords": [
    "phpstan",
    "phpstan-rules",
    "hexagonal-architecture"
  ],
  "authors": [
    {
      "name": "Alejandro Romero",
      "email": "ealejandrorg@gmail.com"
    }
  ],
  "require": {
    "php": "^7.4|^8.2",
    "phpstan/phpstan": "^1.8"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpunit/phpunit": "^9.6"
  },
  "autoload": {
    "psr-4": {
      "CoolDevGuys\\PHPStan\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CoolDevGuys\\PHPStan\\Tests\\": "tests/"
    }
  },
  "config": {
    "platform": {
      "php": "7.4.33"
    },
    "sort-packages": true,
    "preferred-install": "dist"
  },
  "extra": {
    "phpstan": {
      "includes": [
        "rules.neon"
      ]
    }
  },
  "prefer-stable": true
}